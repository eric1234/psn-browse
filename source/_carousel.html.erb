<% field = type.downcase %>

<div id="<%= field %>-carousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <% first_img = true
    for image in images %>
      <div class="carousel-item <%= 'active' if first_img %>">
        <img src="<%= image_url image, :screenshot_med %>" alt="<%= type %>" class="d-block w-100" />
      </div>
      <% first_img = false
    end %>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#<%= field %>-carousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#<%= field %>-carousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
